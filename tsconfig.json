{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"],
      "@http/*": ["src/http/*"],
      "@websocket/*": ["src/websocket/*"],
      "@database/*": ["src/database/*"],
      "@mocks/*": ["src/__tests__/mocks/*"],
      "@src/*": ["src/*"],
    },
    "incremental": true,
    "resolveJsonModule": true
  }
}
