{
  "name": "animes-review-api",
  "version": "0.10.5",
  "description": "",
  "author": "JorgeLNJunior",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "postinstall": "npm list -g pm2 || npm install pm2 -g",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pm2-runtime start ecosystem.config.js --env production",
    "docker:build": "docker build . -t animes-review-api",
    "docker:run": "docker run --env-file .env --network host animes-review-api",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "release": "release-it --ci"
  },
  "dependencies": {
    "@faker-js/faker": "^7.3.0",
    "@nestjs/bull": "^0.5.5",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.4.7",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/platform-socket.io": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/throttler": "^2.0.1",
    "@nestjs/typeorm": "^8.1.4",
    "@nestjs/websockets": "^8.4.7",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "bull": "^4.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cloudinary": "^1.30.0",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "mysql2": "^2.3.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "sharp": "^0.30.7",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@golevelup/ts-jest": "^0.3.3",
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^3.15.8",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/sharp": "^0.30.4",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "release-it": "^15.1.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@shared/(.*)": "<rootDir>/shared/$1",
      "@src/(.*)": "<rootDir>/$1",
      "@config/(.*)": "<rootDir>/config/$1",
      "@http/(.*)": "<rootDir>/app/http/$1",
      "@websocket/(.*)": "<rootDir>/app/websocket/$1",
      "@database/(.*)": "<rootDir>/database/$1",
      "@mocks/(.*)": "<rootDir>/__tests__/mocks/$1"
    },
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/__tests__/**/*",
      "!database/migrations/**/*",
      "!database/seed/**/*",
      "!**/*.entity.(t|j)s",
      "!**/*.strategy.(t|j)s",
      "!main.ts"
    ],
    "testTimeout": 10000
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix --cache"
  }
}
